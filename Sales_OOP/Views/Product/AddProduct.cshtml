@model Sales_OOP.Entity.Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}


<h1>Add Product</h1>

<form method="post">
    @Html.Label("Name")
    @Html.TextBoxFor(x => x.ProductName,new {@class = "form-control"})
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info">Add New Product</button>
</form>

